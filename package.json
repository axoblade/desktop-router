{
	"name": "desktop-router",
	"version": "1.0.0",
	"description": "Desktop HTTP traffic router with Electron UI",
	"main": "src/main.js",
	"scripts": {
		"start": "electron .",
		"dev": "electron . --dev",
		"build": "electron-builder",
		"test": "jest"
	},
	"keywords": [
		"electron",
		"express",
		"router",
		"proxy",
		"http"
	],
	"author": "axoblade",
	"license": "MIT",
	"devDependencies": {
		"electron": "^26.0.0",
		"electron-builder": "^24.0.0",
		"jest": "^29.0.0"
	},
	"dependencies": {
		"express": "^4.18.2",
		"http-proxy-middleware": "^2.0.6",
		"cors": "^2.8.5",
		"body-parser": "^1.20.2",
		"electron-store": "^8.1.0"
	},
	"build": {
		"appId": "com.axoblade.desktop-router",
		"productName": "Desktop Router",
		"directories": {
			"output": "dist"
		},
		"files": [
			"src/**/*",
			"public/**/*",
			"node_modules/**/*"
		],
		"win": {
			"target": "nsis"
		},
		"mac": {
			"target": "dmg"
		},
		"linux": {
			"target": "AppImage"
		}
	}
}
